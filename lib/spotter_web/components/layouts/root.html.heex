<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="csrf-token" content={Plug.CSRFProtection.get_csrf_token()} />
    <title>Spotter</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Bricolage+Grotesque:opsz,wght@12..96,400;12..96,500;12..96,600;12..96,700&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="/assets/xterm.css" />
    <link rel="stylesheet" href="/assets/spotter.css" />
    <script defer src="/assets/app.js">
    </script>
  </head>
  <body>
    <div class="app-shell">
      <aside class="sidebar">
        <div class="sidebar-brand">
          <div class="sidebar-logo">S</div>
          <span class="sidebar-title">Spotter</span>
        </div>
        <nav class="sidebar-nav">
          <a href="/" class="sidebar-link" data-nav-path="/">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5"><rect x="2" y="2" width="5" height="5" rx="1"/><rect x="9" y="2" width="5" height="5" rx="1"/><rect x="2" y="9" width="5" height="5" rx="1"/><rect x="9" y="9" width="5" height="5" rx="1"/></svg>
            Dashboard
          </a>
          <% review_count = Spotter.Services.ReviewCounts.total_open_count() %>
          <a href="/reviews" class="sidebar-link" data-nav-path="/reviews">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M3 3h10v8H7l-3 3v-3H3z"/></svg>
            Reviews
            <%= if review_count > 0 do %>
              <span class="sidebar-badge"><%= review_count %></span>
            <% end %>
          </a>
          <a href="/history" class="sidebar-link" data-nav-path="/history">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="8" cy="8" r="6"/><polyline points="8,4 8,8 11,10"/></svg>
            History
          </a>
        </nav>
      </aside>
      <main class="main-content">
        <%= @inner_content %>
      </main>
    </div>
    <script>
      (function() {
        var path = window.location.pathname;
        document.querySelectorAll('.sidebar-link').forEach(function(link) {
          var navPath = link.getAttribute('data-nav-path');
          if (navPath === '/' ? path === '/' : path.startsWith(navPath)) {
            link.classList.add('is-active');
          }
        });
      })();
    </script>
  </body>
</html>
